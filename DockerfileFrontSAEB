# Build stage
FROM node:18-alpine AS build

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependências E vite globalmente
RUN npm install && npm install -g vite

# Copiar código fonte
COPY . .

# Build da aplicação
RUN vite build

# Production stage
FROM node:18-alpine

WORKDIR /app

# Copiar arquivos buildados
COPY --from=build /app/dist ./dist

# Instalar serve
RUN npm install -g serve

# Comando de inicialização
CMD serve -s dist -p ${PORT:-3000}