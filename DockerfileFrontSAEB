# Build stage
FROM node:18 AS build

WORKDIR /app

# Copiar e instalar
COPY package*.json ./
RUN npm install

# Copiar c√≥digo e buildar
COPY . .
RUN npm run build

# Production stage
FROM node:18-slim

WORKDIR /app

# Copiar build
COPY --from=build /app/dist ./dist

# Instalar serve
RUN npm install -g serve

# Rodar
CMD serve -s dist -p ${PORT:-3000}